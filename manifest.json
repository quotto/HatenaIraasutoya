{
  "manifest_version": 2,
  "name": "HatenaBlogIrasutoyaTool",
  "version": "1.0",
  "description": "Irasutoya search tool in your HatenaBlog editor",
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_title": "HatenaIrasuto",
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://blog.hatena.ne.jp/*"
      ],
      "css": ["css/contents.css"],
      "js": ["lib/jquery/js/jquery-3.1.1.min.js","js/common.js","js/contents.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://blog.hatena.ne.jp/*"
  ],
  "icons": {
    "128": "icon_128.png"
  },
  "options_page":"html/options.html"
}

